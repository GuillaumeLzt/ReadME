<link rel='stylesheet' href='/stylesheets/stylll.css' />

<div class="wrapper">
    <div class="box4">
        <h1> Inscription</h1>
    </div>
    <div class="box5"> 
    <form action="/register" method="post">
        <div class="form-group">
            <label for="pseudo">Pseudo : </label>
            <input type="pseudo" id="pseudo" name="username" class="form-control" placeholder="Enter Pseudo..." value="<%= typeof pseudo != 'undefined' ? pseudo : '' %>"/>
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email..." value="<%= typeof email != 'undefined' ? email : '' %>" size="30" />
            <div class="email error"></div>
        </div>
        <div class="form-group">
            <label for="password">Password :</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password..." value="<%= typeof password != 'undefined' ? password : '' %>" size="30"/>
            <div class="password error"></div>
        </div>
        <p>Vous avez déjà un compte ? <a href="/login">Login</a></p>
    </div>
    <div class="box6">
        <input  type="submit" value="Valider" class="btn btn-primary btn-block">
        <input type="button" value="Annuler" onclick="history.go(-1)">
    </div>      
    </form>          
</div> 
    